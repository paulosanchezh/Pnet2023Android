<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/EditFormButtonCancel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="92dp"
        android:text="@string/EditFormButtonCancel"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="520dp" />

    <Button
        android:id="@+id/EditFormButtonSave"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginEnd="92dp"
        android:text="@string/EditFormButtonSave"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="520dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="1dp">

        <TextView
            android:id="@+id/EditFormTitle"
            android:layout_width="378dp"
            android:layout_height="51dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/EditFormSubtitle"
            android:layout_width="179dp"
            android:layout_height="36dp"
            android:text="TextView" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="4dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="159dp">

        <EditText
            android:id="@+id/EditFormHour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="time" />

        <EditText
            android:id="@+id/EditFormPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberSigned" />

        <EditText
            android:id="@+id/EditFormDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number" />

        <EditText
            android:id="@+id/EditFormDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="date" />

        <EditText
            android:id="@+id/EditFormMail"
            android:layout_width="210dp"
            android:layout_height="46dp"
            android:ems="10"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/EditFormName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:text="" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>