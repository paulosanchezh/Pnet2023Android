<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="72dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewReservarTitle"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="20dp"
                android:height="15dp"
                android:text="@string/reservarTitle"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewReservarCentro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Centro" />

            <Spinner
                android:id="@+id/spinnerCentro"
                android:layout_width="wrap_content"
                android:layout_height="48dp" />

            <TextView
                android:id="@+id/textViewReservarPista"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pista" />

            <Spinner
                android:id="@+id/spinnerPista"
                android:layout_width="wrap_content"
                android:layout_height="48dp" />

            <TextView
                android:id="@+id/textViewDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date" />

            <CalendarView
                android:id="@+id/calendarView"
                android:layout_width="match_parent"
                android:layout_height="297dp" />

            <TextView
                android:id="@+id/textViewReservarHour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hour" />

            <EditText
                android:id="@+id/editTextTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="time" />

            <TextView
                android:id="@+id/textViewReservarDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Duration" />

            <EditText
                android:id="@+id/editTextNumberSigned"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberSigned" />

            <TextView
                android:id="@+id/textViewReservarPeople"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="People" />

            <EditText
                android:id="@+id/editTextNumberSigned2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberSigned" />

            <TextView
                android:id="@+id/textViewReservarName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name" />

            <TextView
                android:id="@+id/textViewReservarMail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mail" />

            <TextView
                android:id="@+id/textViewReservarDNI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DNI" />

            <TextView
                android:id="@+id/textViewReservarPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone" />

            <TextView
                android:id="@+id/textViewReservarMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Message" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>