<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SalasFragment"
    android:id="@+id/salas_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewTituloSala"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8sp"
            android:gravity="center"
            android:text="@string/tituloSala"
            android:textColor="@color/more_dark_green"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_greent"
            android:paddingHorizontal="20dp"
            android:text="@string/descripcionSala"
            android:textAlignment="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8sp"
            android:gravity="center"
            android:text="@string/personalSala"
            android:textColor="@color/more_dark_green"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textViewDescripciónSala"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_greent"
            android:paddingHorizontal="20dp"
            android:text="@string/descripcionPersonal"
            android:textAlignment="center" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginHorizontal="25sp"
            android:layout_marginTop="20sp"
            android:background="@color/more_dark_green"></View>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8sp"
            android:layout_marginTop="0sp"
            android:gravity="center"
            android:text="@string/tituloSalaB"
            android:textColor="@color/more_dark_green"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_greent"
            android:paddingHorizontal="20dp"
            android:text="@string/descripcionSalaB"
            android:textAlignment="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8sp"
            android:gravity="center"
            android:text="@string/personalSala"
            android:textColor="@color/more_dark_green"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:background="@color/white_greent"
            android:paddingHorizontal="20dp"
            android:text="@string/descripcionPersonal"
            android:textAlignment="center" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:gravity="center">


                <TextView
                    android:id="@+id/textViewDeportes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/dark_green"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Deportes"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewPistas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/dark_green"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Pistas"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewMaterial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/dark_green"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Material Deportivo"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/more_white_green"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Fútbol" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/more_white_green"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Campo Fútbol 11" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/more_white_green"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="No" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/more_white_green"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Tenis" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/more_white_green"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Pista Exterior" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/more_white_green"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="No" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/more_white_green"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Baloncesto"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/more_white_green"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Pabellón Interior" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/more_white_green"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Si" />
            </TableRow>
        </TableLayout>

        <Button
            android:id="@+id/buttonGeneratePDF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:text="@string/buttonPdf"
            android:layout_marginTop="10sp">
        </Button>


    </LinearLayout>

</FrameLayout>