<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:map="http://schemas.android.com/apk/res-auto">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/donde_esta"
                    map:layout_constraintTop_toTopOf="parent"
                    tools:layout_editor_absoluteX="0dp"
                    android:textColor="@color/more_dark_green"
                    android:textStyle="bold"/>

                <fragment
                    android:id="@+id/map"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginTop="16dp"
                    map:cameraBearing="112.5"
                    map:cameraTargetLat="36.47016453882671"
                    map:cameraTargetLng="-6.20758135976366"
                    map:cameraTilt="30"
                    map:cameraZoom="16"
                    map:layout_constraintTop_toBottomOf="@+id/textView2"
                    map:mapType="normal"
                    map:uiCompass="false"
                    map:uiRotateGestures="true"
                    map:uiScrollGestures="true"
                    map:uiTiltGestures="true"
                    map:uiZoomControls="true"
                    map:uiZoomGestures="true"
                    tools:layout_editor_absoluteX="0dp" />

                <TextView
                    android:id="@+id/textComoLlegar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/como_llegar_titulo"
                    map:layout_constraintTop_toBottomOf="@+id/map"
                    tools:layout_editor_absoluteX="0dp"
                    android:textStyle="bold"
                    android:textColor="@color/more_dark_green"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>